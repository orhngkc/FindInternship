{% extends 'layout.twig' %}

{% block body %}
  <!DOCTYPE html>
<html lang="en">

<head>
    <title>Material Able bootstrap admin template by Codedthemes</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
</head>
<body>
            <div class="pcoded-main-container">
                <div class="pcoded-wrapper"> 
                    <div class="pcoded-content" style="margin-left: 0px!important">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="page-header-title">
                                            <h5 class="m-b-10">Bir Staj Yeri Ekle</h5>
                                            <p class="m-b-0">Detaylıca anlatmaya özen göster!</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <div class="pcoded-inner-content">
                            <!-- Main-body start -->
                            <div class="main-body">
                                <div class="page-wrapper">

                                    <!-- Page body start -->
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <!-- Basic Form Inputs card start -->
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5>Staj Yeri Ekleme Formu</h5>
                                                    </div>
                                                    <div class="card-block">
                                                        <form method="post" action="/add-internship">
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">İş Yerinin Adı</label>
                                                                <div class="col-sm-10">
                                                                    <input type="text" class="form-control" name="name">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Bölüm</label>
                                                                <div class="col-sm-10">
                                                                    <select name="select" class="form-control">
                                                                        <option value="1" id="1">Birini seçiniz</option>
                                                                        <option value="2" id="2">Bilgisayar Mühendisliği</option>
                                                                        <option value="3" id="3">Makina Mühendisliği</option>
                                                                        <option value="4" id="4">İnşaat Mühendisliği</option>
                                                                        <option value="5" id="5">Gıda Mühendisliği</option>
                                                                        <option value="6" id="6">Kimya Mühendisliği</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Nasıl Kabul Ediliyor?</label>
                                                                <div class="col-sm-10">
                                                                    <select name="accept" class="form-control">
                                                                        <option value="1" id="1">Birini seçiniz</option>
                                                                        <option value="Sözlü Mülakat" id="2">Sözlü Mülakat</option>
                                                                        <option value="Sınav" id="3">Sınav</option>
                                                                        <option value="Yetenek Sınavı" id="4">Yetenek Sınavı</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Maaş</label>
                                                                <div class="col-sm-10">
                                                                    <input type="number" class="form-control" name="salary">
                                                                </div>
                                                            </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Çalışan Sayısı</label>
                                                                <div class="col-sm-10">
                                                                    <input type="number" class="form-control" name="num">
                                                                </div>
                                                            </div>
                                                                <div class="form-group row">
                                                                    <label class="col-sm-2 col-form-label">Adres</label>
                                                                    <div class="col-sm-10">
                                                                        <textarea rows="5" cols="5" class="form-control" placeholder="Açık adresi giriniz" name="adress"></textarea>
                                                                    </div>
                                                                </div>
                                                            <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Staj Yeri Hakkında Yorumlarınız</label>
                                                                <div class="col-sm-10">
                                                                    <textarea rows="5" cols="5" class="form-control" placeholder="İşin işleyişi, öğretilenler bilgilerin vs. detaylarından bahsedin." name="info"></textarea>
                                                                </div>
                                                            </div>
                                                              <div class="form-group row">
                                                                <label class="col-sm-2 col-form-label">Staj Deneyimini 10 üzerinden puanla</label>
                                                                <div class="col-sm-10">
                                                                    <select name="point" class="form-control">
                                                                        <option value="0" id="1">Birini seçiniz</option>
                                                                        <option value="1" id="2">1</option>
                                                                        <option value="2" id="3">2</option>
                                                                        <option value="3" id="4">3</option>
                                                                        <option value="4" id="4">4</option>
                                                                        <option value="5" id="4">5</option>
                                                                        <option value="6" id="4">6</option>
                                                                        <option value="7" id="4">7</option>
                                                                        <option value="8" id="4">8</option>
                                                                        <option value="9" id="4">9</option>
                                                                        <option value="10" id="4">10</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <center><button type="submit" class="btn btn-primary waves-effect waves-light d-flex align-center">Gönder</button></center>
                                                        </form>
                                                    </div>
                                                </div>
                                                <!-- Basic Form Inputs card end -->
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Page body end -->
                                </div>
                            </div>
                            <!-- Main-body end -->
                            <div id="styleSelector">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {# </div> #}
</body>

</html>
{% endblock %}
